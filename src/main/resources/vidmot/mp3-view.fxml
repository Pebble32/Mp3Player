<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:id="fxPane" prefHeight="175.0" prefWidth="354.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="vidmot.MP3Controller">
    <Label fx:id="fxLabel" prefHeight="82.0" prefWidth="354.0" alignment="CENTER" textAlignment="CENTER" text="MP3 PLAYER" />
    <ProgressBar fx:id="fxSongProgress" layoutX="20.0" layoutY="82.0" prefHeight="18.0" prefWidth="314.0" progress="0.0" />
    <Slider fx:id="fxVolume" layoutX="34.0" layoutY="136.0" max="100.0" prefHeight="14.0" prefWidth="200.0" value="50.0" />
    <Button fx:id="fxPlay" layoutX="146.0" layoutY="100.0" mnemonicParsing="false" onAction="#playMedia" prefHeight="25.0" prefWidth="62.0" text="Play" />
    <Button fx:id="fxPause" layoutX="208.0" layoutY="100.0" mnemonicParsing="false" onAction="#pauseMedia" prefHeight="25.0" prefWidth="62.0" text="Pause" />
    <Button fx:id="fxNext" layoutX="270.0" layoutY="100.0" mnemonicParsing="false" onAction="#nextMedia" prefHeight="25.0" prefWidth="62.0" text="Next" />
    <Button fx:id="fxRestart" layoutX="83.0" layoutY="100.0" mnemonicParsing="false" onAction="#restartMedia" prefHeight="25.0" prefWidth="62.0" text="Restart" />
    <Button fx:id="fxPrevious" layoutX="20.0" layoutY="100.0" mnemonicParsing="false" onAction="#previousMedia" prefHeight="25.0" prefWidth="62.0" text="Previous" />
    <ComboBox fx:id="fxSpeed" layoutX="239.0" layoutY="131.0" onAction="#speedChange" prefHeight="18.0" prefWidth="82.0" promptText="Speed" />
</AnchorPane>
